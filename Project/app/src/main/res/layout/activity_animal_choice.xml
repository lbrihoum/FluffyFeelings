<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AnimalChoice"
    android:background="#b4ecb4"
    >

    <TextView
        android:id="@+id/fluffyView2"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/indieflower"
        android:text="@string/ff"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        android:typeface="serif"
        app:layout_constraintHorizontal_bias="0.947"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/choiceView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="106dp"
        android:fontFamily="@font/indieflower"
        android:text="@string/whatsee"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:typeface="serif"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/smol_doggo"
        android:layout_width="247dp"
        android:layout_height="184dp"
        android:layout_marginStart="196dp"
        android:layout_marginTop="224dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/puppy_transparent" />

    <ImageView
        android:id="@+id/bottom_pets"
        android:layout_width="412dp"
        android:layout_height="168dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lizardButton"
        app:srcCompat="@drawable/many_pets" />

    <ImageView
        android:id="@+id/sassy_cat"
        android:layout_width="198dp"
        android:layout_height="155dp"
        android:layout_marginTop="101dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cat" />

    <ImageView
        android:id="@+id/bunbun"
        android:layout_width="111dp"
        android:layout_height="135dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="384dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bunny_transparent" />

    <Button
        android:id="@+id/catButton"
        android:layout_width="85dp"
        android:layout_height="48dp"
        android:layout_marginStart="162dp"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/indieflower"
        android:background="#b4ecb4"
        android:text="Cats"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/choiceView" />

    <Button
        android:id="@+id/dogButton"
        android:layout_width="85dp"
        android:layout_height="48dp"
        android:layout_marginStart="162dp"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/indieflower"
        android:background="#b4ecb4"
        android:text="Dogs"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/catButton" />

    <Button
        android:id="@+id/birdButton"
        android:layout_width="85dp"
        android:layout_height="48dp"
        android:layout_marginStart="162dp"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/indieflower"
        android:background="#b4ecb4"
        android:text="Birds"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dogButton" />

    <Button
        android:id="@+id/bunnyButton"
        android:layout_width="85dp"
        android:layout_height="48dp"
        android:layout_marginStart="162dp"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/indieflower"
        android:background="#b4ecb4"
        android:text="Bunnies"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/birdButton" />

    <Button
        android:id="@+id/lizardButton"
        android:layout_width="85dp"
        android:layout_height="48dp"
        android:layout_marginStart="162dp"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/indieflower"
        android:background="#b4ecb4"
        android:text="Lizards"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bunnyButton" />

    <!--<Button
        android:id="@+id/goButton"
        android:layout_width="78dp"
        android:layout_height="44dp"
        android:layout_marginStart="162dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="162dp"
        android:background="@drawable/next_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBox5" />-->

</android.support.constraint.ConstraintLayout>